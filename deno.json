{
	"version": "0.0.3",
	"name": "@mr/retry",
	"exports": "./lib/mod.ts",
	"tasks": {
		"build": "deno run -A scripts/build.ts"
	},
	"imports": {
		"@std/assert": "jsr:@std/assert@^1",
		"@std/path": "jsr:@std/path@^1"
	},
	"lock": false,
	"lint": {
		"rules": {
			"exclude": [
				"no-var",
				"prefer-const",
				"no-cond-assign",
				"no-inner-declarations",
				"no-explicit-any"
			]
		}
	},
	"fmt": {
		"lineWidth": 100,
		"singleQuote": true,
		"useTabs": true
	},
	"exclude": [
		"npm",
		"coverage"
	],
	"publish": {
		"include": [
			"lib/mod.ts",
			"license",
			"readme.md"
		]
	}
}
